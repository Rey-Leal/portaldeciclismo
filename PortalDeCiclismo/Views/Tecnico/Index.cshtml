@model IEnumerable<PortalDeCiclismo.Models.Tecnico>

@{
    ViewBag.Title = "Técnicos";
}

<form action="@Url.Action("ImprimirTecnicos", "Tecnico")" target="_blank" method="post">
    <h2>
        <span class="glyphicon glyphicon-education">&nbsp;</span>Técnicos
        <a class="btn btn-success" href="@Url.Action("Create", "Tecnico")"><span class="glyphicon glyphicon-file"></span> Criar Novo</a>
        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-print"></span> Imprimir</button>
    </h2>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-sm btn-success" href="@Url.Action("Edit", "Tecnico", new { id = item.TecnicoID })"><span class="glyphicon glyphicon-pencil"></span></a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Tecnico", new { id = item.TecnicoID })"><span class="glyphicon glyphicon-search"></span></a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Tecnico", new { id = item.TecnicoID })"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
