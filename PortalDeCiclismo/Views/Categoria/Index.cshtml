@model IEnumerable<PortalDeCiclismo.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<form action="@Url.Action("ImprimirCategorias", "Categoria")" target="_blank" method="post">
    <h2>
        <span class="glyphicon glyphicon-tag">&nbsp;</span>Categorias
        <a class="btn btn-success" href="@Url.Action("Create", "Categoria")"><span class="glyphicon glyphicon-file"></span> Criar Nova</a>
        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-print"></span> Imprimir</button>
    </h2>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a class="btn btn-sm btn-success" href="@Url.Action("Edit", "Categoria", new { id = item.CategoriaID })"><span class="glyphicon glyphicon-pencil"></span></a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Categoria", new { id = item.CategoriaID })"><span class="glyphicon glyphicon-search"></span></a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Categoria", new { id = item.CategoriaID })"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
